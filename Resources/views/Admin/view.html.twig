{% extends 'SoipoOkentoAdminBundle:Layout:main_boxed.html.twig' %}

{% set title = 'title.view' %}

{% block content_header  %}
    <h1>{{ title|trans }}</h1>
{% endblock %}

{% block box_body  %}
    <div class="box">
        <div class="box-header">
        </div><!-- /.box-header -->
        <div class="box_body">
            {% if user is not null %}
                <table id="user" class="table table-bordered table-striped">
                    <tbody>
                    <tr>
                        <th>{{ 'label.title'|trans }}</th>
                        <td>{{ user.title }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.firstname'|trans }}</th>
                        <td>{{ user.firstName }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.lastname'|trans }}</th>
                        <td>{{ user.lastName }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.email'|trans }}</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.city'|trans }}</th>
                        <td>{{ user.city }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.province'|trans }}</th>
                        <td>{{ user.province }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.postalCode'|trans }}</th>
                        <td>{{ user.postalCode }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.country'|trans }}</th>
                        <td>{{ user.country }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.phone'|trans }}</th>
                        <td>{{ user.phone }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'label.active'|trans }}</th>
                        <td>{{ user.active ? 'yes':'no' |trans }}</td>
                    </tr>
                    </tbody>
                </table>
            {% else %}
                <p>{{ 'no.user.found'|trans }}</p>
            {% endif %}
{% endblock %}

